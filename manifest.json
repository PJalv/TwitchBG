{
    "manifest_version": 3,
    "name": "Your Extension Name",
    "version": "1.0",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "persistent": true
    },
    "host_permissions": [
        "https://twitchtheater.tv/*"
    ]
}
